<configuration>

    <!-- Console appender: logs to stdout -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger: INFO level and above -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

    <!-- You can override specific packages for more verbosity -->
    <logger name="error.JsonErrorHandler" level="DEBUG" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>

</configuration>